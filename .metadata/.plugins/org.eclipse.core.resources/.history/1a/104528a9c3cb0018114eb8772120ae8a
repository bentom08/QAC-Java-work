package com.qa.coins;

public class Runner {

	public static void main(String[] args) {
		change(67.58, 20);
	}
	
	public static void change(double cost, double amount) {
		System.out.println("The amount is £" + cost + " and the customer pays £" + amount + " therefore the change is:");
		
		int twentys = (int) (amount/20);
		amount -= twentys*20;
		int tens = (int) (amount/10);
		amount -= tens*10;
		int fives = (int) (amount/5);
		amount -= fives*5;
		int twos = (int) (amount/2);
		amount -= twos*2;
		int ones = (int) (amount/1);
		amount -= ones;
		int fiftyPence = (int) (amount/0.5);
		amount -= fiftyPence*0.5;
		int twentyPence = (int) (amount/0.2);
		amount -= twentyPence*0.2;
		int tenPence = (int) (amount/0.1);
		amount -= tenPence*0.1;
		int fivePence = (int) (amount/0.05);
		amount -= fivePence*0.05;
		int twoPence = (int) (amount/0.02);
		amount -= twoPence*0.02;
		int onePence = (int) (amount/0.01);
		amount -= onePence*0.01;
		
		if (twentys != 0) {
			System.out.println("");
		}
	}
}
