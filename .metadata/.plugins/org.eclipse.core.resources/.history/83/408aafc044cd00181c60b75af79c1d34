package com.qa.Library;

import static org.junit.Assert.*;

import java.util.ArrayList;
import java.util.List;

import org.junit.Before;
import org.junit.Test;

public class LibraryTest {
	
	private Library myLibrary;
	private Book myBook;
	private Newspaper myNP;
	private Map myMap;
	private Person myPerson;
	
	@Before
	public void setup() {
		myLibrary = new Library();
		myBook = new Book();
		myNP = new Newspaper();
		myMap = new Map();
		myPerson = new Person("Ben", 25, "07580736990");
	}

	@Test
	public void testAdd() {
		
		List<Item> myList = new ArrayList<>();
		myList.add(myBook);
		
		assertEquals(myList, myLibrary.add(myBook));
		
		myList.add(myNP);
		
		assertEquals(myList, myLibrary.add(myNP));
		
		myList.add(myMap);
		
		assertEquals(myList, myLibrary.add(myMap));
	}
	
	@Test
	public void testRegister() {
		
		List<Person> myList = new ArrayList<>();
		myList.add(myPerson);
		
		assertEquals(myList, myLibrary.register(myPerson));
	}
}
