package com.qa.Library;

import static org.junit.Assert.*;

import java.util.ArrayList;
import java.util.List;

import org.junit.Before;
import org.junit.Test;

public class LibraryTest {
	
	private Library myLibrary;
	private Book myBook;
	private Newspaper myNP;
	private Map myMap;
	private Person ben;
	private Person joe;
	
	@Before
	public void setup() {
		myLibrary = new Library();
		myBook = new Book();
		myNP = new Newspaper();
		myMap = new Map();
		ben = new Person("Ben", 25, "07580736990");
		joe = new Person("Joseph", 24, "A nerds phone number");
	}

	@Test
	public void testAdd() {
		
		List<Item> myList = new ArrayList<>();
		myList.add(myBook);
		
		assertEquals(myList, myLibrary.add(myBook));
		
		myList.add(myNP);
		
		assertEquals(myList, myLibrary.add(myNP));
		
		myList.add(myMap);
		
		assertEquals(myList, myLibrary.add(myMap));
	}
	
	@Test
	public void testRegister() {
		
		List<Person> myList = new ArrayList<>();
		myList.add(ben);
		System.out.println(myList);
		
		assertEquals(myList, myLibrary.register("Ben", 25, "07580736990"));
		
		myList.add(joe);
		
		assertEquals(myList, myLibrary.register("Joseph", 24, "A nerds phone number"));
	}
}
