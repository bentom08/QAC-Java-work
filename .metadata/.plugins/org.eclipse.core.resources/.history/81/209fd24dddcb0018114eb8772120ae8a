package com.qa.StringManipulation;

import java.util.Arrays;
import java.util.List;

public class Runner {

	public static void main(String[] args) {
		String myString = "Joe is very tired";
		countWordsStreams(myString);
	}
	
	public static void countWords(String s) {
		int word = 0;
		int numberOfWords = 0;
		for (int i = 0; i < s.length(); i++) {
			if (s.substring(i, i+1).equals(" ")) {
				System.out.println(s.substring(word, i));
				word = i+1;
				numberOfWords++;
			} else if (i == s.length() - 1) {
				System.out.println(s.substring(word, i+1));
				numberOfWords++;
			}
		}
		
		System.out.println(numberOfWords);
	}
	
	public static void countWordsArray(String s) {
		String[] myArray = s.split(" ");
				
		for (int i = 0; i < myArray.length; i++) {
			System.out.println(myArray[i]);
		}
	}
	
	public static void countWordsStreams(String s) {
		List<String> myList = Arrays.asList(s);
		
		System.out.println(myList);
	}
}
