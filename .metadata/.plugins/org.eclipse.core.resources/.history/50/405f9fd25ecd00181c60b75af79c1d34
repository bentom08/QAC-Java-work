package com.qa.Goldilocks;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class Table {

	private List<Seat> myTable;
	private int weight;
	private int temp;
	
	public Table(int weight, int temp) {
		myTable = new ArrayList<>();
		this.weight = weight;
		this.temp = temp;
	}
	
	public String whichSeats() {
		myTable.stream().filter(i -> i.getTemp() <= this.temp)
						.filter(i -> i.getWeight() >= this.weight).collect(Collectors.toList());
	}
}
