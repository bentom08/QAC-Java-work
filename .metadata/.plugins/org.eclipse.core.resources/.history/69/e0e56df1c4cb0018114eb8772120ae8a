package com.qa.coins;

public class Runner {

	public static void main(String[] args) {
		change(2.46, 20);
	}
	
	public static void change(double cost, double amount) {
		System.out.println("The cost is £" + cost + " and the customer pays £" + amount + " therefore the change is:");
		double change = amount - cost;
		
		
		int twentys = (int) (change/20);
		change -= twentys*20;
		int tens = (int) (change/10);
		change -= tens*10;
		int fives = (int) (change/5);
		change -= fives*5;
		int twos = (int) (change/2);
		change -= twos*2;
		int ones = (int) (change/1);
		change -= ones;
		int fiftyPence = (int) (change/0.5);
		change -= fiftyPence*0.5;
		int twentyPence = (int) (change/0.2);
		change -= twentyPence*0.2;
		int tenPence = (int) (change/0.1);
		change -= tenPence*0.1;
		int fivePence = (int) (change/0.05);
		change -= fivePence*0.05;
		int twoPence = (int) (change/0.02);
		change -= twoPence*0.02;
		int onePence = (int) (change/0.01);
		change -= onePence*0.01;
		
		if (twentys != 0) {
			System.out.println(twentys + " £20 notes");
		} if (tens != 0) {
			System.out.println(tens + " £10 notes");
		} if (fives != 0) {
			System.out.println(fives + " £5 notes");
		} if (twos != 0) {
			System.out.println(twos + " £2 coins");
		} if (ones != 0) {
			System.out.println(ones + " £1 coins");
		} if (fiftyPence != 0) {
			System.out.println(fiftyPence + " 50p coins");
		} if (twentyPence != 0) {
			System.out.println(twentyPence + " 20p coins");
		} if (tenPence != 0) {
			System.out.println(tenPence + " 10p coins");
		} if (fivePence != 0) {
			System.out.println(fivePence + " 5p coins");
		} if (twoPence != 0) {
			System.out.println(twoPence + " 2p coins");
		} if (onePence != 0) {
			System.out.println(onePence + " 1p coins");
		}
	}
}
