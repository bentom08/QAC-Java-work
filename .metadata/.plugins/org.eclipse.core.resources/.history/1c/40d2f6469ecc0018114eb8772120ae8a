package com.qa.PaintWizard;

import java.util.List;
import java.util.stream.Collectors;

public class PaintWizard {

	List<Paint> paints;
	
	public PaintWizard(List<Paint> paints) {
		this.paints = paints;
	}
	
	public Paint cheapestPaint(double roomSize) {
		List<Double> totalCosts = paints.stream()
											.map(i -> ((int)(roomSize/i.getAreaPerContainer()) + 1)
													*i.getCost())
											.collect(Collectors.toList());
		
		
	}
	
	public Paint leastWaste(double roomSize) {
		
	}
}
