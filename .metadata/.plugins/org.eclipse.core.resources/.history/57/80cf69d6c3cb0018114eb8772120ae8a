package com.qa.coins;

public class Runner {

	public static void main(String[] args) {
		change(17.58, 20);
	}
	
	public static void change(double cost, double amount) {
		System.out.println("The amount is £" + cost + " and the customer pays £" + amount + " therefore the change is:");
		
		int twentys = (int) (amount/20);
		amount -= twentys*20;
		System.out.println(amount);
		int tens = (int) (amount/10);
		amount -= tens*10;
		int fives = (int) (amount/5);
		amount -= fives*5;
		int twos = (int) (amount/2);
		amount -= twos*2;
		int ones = (int) (amount/1);
		amount -= ones;
		int fiftyPence = (int) (amount/0.5);
		amount -= fiftyPence*0.5;
		int twentyPence = (int) (amount/0.2);
		amount -= twentyPence*0.2;
		int tenPence = (int) (amount/0.1);
		amount -= tenPence*0.1;
		int fivePence = (int) (amount/0.05);
		amount -= fivePence*0.05;
		int twoPence = (int) (amount/0.02);
		amount -= twoPence*0.02;
		int onePence = (int) (amount/0.01);
		amount -= onePence*0.01;
		
		if (twentys != 0) {
			System.out.println(twentys + " £20 notes");
		} if (tens != 0) {
			System.out.println(tens + " £10 notes");
		} if (fives != 0) {
			System.out.println(fives + " £5 notes");
		} if (twos != 0) {
			System.out.println(twos + " £2 coins");
		} if (ones != 0) {
			System.out.println(ones + " £1 coins");
		} if (fiftyPence != 0) {
			System.out.println(fiftyPence + " 50p coins");
		} if (twentyPence != 0) {
			System.out.println(twentyPence + " 20p coins");
		} if (tenPence != 0) {
			System.out.println(tenPence + " 10p coins");
		} if (fivePence != 0) {
			System.out.println(fivePence + " 5p coins");
		} if (twoPence != 0) {
			System.out.println(twoPence + " 2p coins");
		} if (onePence != 0) {
			System.out.println(onePence + " 1p coins");
		}
	}
}
