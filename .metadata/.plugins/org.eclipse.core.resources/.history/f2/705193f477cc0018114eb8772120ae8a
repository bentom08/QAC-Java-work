package com.qa.GarageClass;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class Garage {

	List<Vehicle> myGarage;
	List<Integer> myBills;
	
	public Garage() {
		this.myGarage = new ArrayList<>();
		this.myBills = new ArrayList<>();
	}
	
	public void store(Vehicle myVehicle) {
		myGarage.add(myVehicle);
		myBills.add(0);
	}
	
	public void printBill() {
		myBills = myGarage.stream().flatMap(i -> {if (i instanceof Car) {10*((Car) i).getNumberOfSeatbelts()}}).collect(Collectors.toList());
		System.out.println(myBills);
	}
}
