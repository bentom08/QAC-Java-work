package com.qa.StringManipulation;

import java.util.ArrayList;
import java.util.List;

public class Runner {

	public static void main(String[] args) {
		String myString = "Joe is very tired";
		countWordsStream(myString);
	}
	
	public static void countWords(String s) {
		int word = 0;
		int numberOfWords = 0;
		for (int i = 0; i < s.length(); i++) {
			if (s.substring(i, i+1).equals(" ") || i == s.length() - 1) {
				System.out.println(s.substring(word, i));
				word = i;
				numberOfWords++;
			}
		}
		
		System.out.println(numberOfWords);
	}
	
	public static void countWordsStream(String s) {
		String[] myArray = s.split(" ");
		
		System.out.println(myArray);
		
		
		for (int i = 0; i < s.length(); i++) {
			//myList.add(s.substring(i, i+1));
		}
	}
}
